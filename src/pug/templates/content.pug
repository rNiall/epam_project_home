section.main
    .details
        input.search(placeholder="Search for a person")
        .actions
            .request
                .text Move Request
            .look
                .text Look for available place
        .office_info
            .header_office my office
            .office_details
                ul.office_location
                    li.arrow Russia
                    li.arrow Saint-Petersburg
                    li.arrow Nab.Chyornoy rechki
                ul.floors
                    li.title Floors:
                    li.circle 1
                    li.circle 2
                    li.circle 3
                    li.circle 4
                    li.circle ...
                    li.circle 25
                .office_numbers
                    span Unit: 654
                    span Number of room: 654
    .personal_info
        .tab
            button.tablinks(onclick="openTab(event, 'requests')") my requests
            button.tablinks(onclick="openTab(event, 'recently_viewed')") recently viewed units
            button.tablinks(onclick="openTab(event, 'units')") my units
        .tabcontent#requests
            .requests_table
                span Test
        .tabcontent#recently_viewed
            span Test 2
        .tabcontent#units
            span Test 3
