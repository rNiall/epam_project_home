include mixins
section.main
    .wrapper.row
        .details
            form(action='#')
                input.search(placeholder="Search for a person")
            .actions
                .request MOVEMENT REQUEST
                .look Look for
                    br
                    | available place
            .office_info
                .header_office my office
                .office_details
                    ul.office_location
                        li.arrow Russia
                        li.arrow Saint-Petersburg
                        li.arrow Nab.Chyornoy rechki
                    ul.floors
                        li.title Floors:
                        li.circle 1
                        li.circle 2
                        li.circle 3
                        li.circle 4
                        li.circle ...
                        li.circle 25
                    ul.office_numbers
                        li Unit: 654
                        li Number of room: 654
        .personal_info
            .tab
                button.tablinks(onclick="openTab(event, 'requests')", id="defaultOpen") My requests
                button.tablinks(onclick="openTab(event, 'recently_viewed')") Recently viewed units
                button.tablinks(onclick="openTab(event, 'units')") My units
            .tabcontent#requests
                .requests_table
                    table.table-sortable.table-bordered
                        thead(data-header="true")
                            tr
                                th(data-sort-column="true") Request
                                th.active(data-sort-column="true") Date
                                th(data-sort-column="true") Status
                        tbody(data-body="true")
